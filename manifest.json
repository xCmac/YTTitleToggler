{
  "manifest_version": 2,

  "name": "YT Title Toggler",
  "description": "Toggle visiblity of Youtube video titles",
  "homepage_url": "https://github.com/xCmac/YTTitleToggler",
  "version": "1.0",
  "content_scripts": [
  {
    "matches": ["*://*.youtube.com/*"],
    "js": ["jquery-3.1.0.min.js", "yttoggler.js"],
    "css": ["togglestyle.css"],
    "run_at": "document_end"
  }],

  "browser_action": {
    "default_title": "YTToggler!"
  }
}